<body>
    <h2>Calculadora de Operações Básicas</h2>
    
    <form method="POST">
        <input type="number" name="num1" placeholder="Digite o 1º número" required>
        <input type="number" name="num2" placeholder="Digite o 2º número" required>
        <br><br>
        <input type="submit" value="Calcular">
    </form>

    <?php
    if ($_SERVER["REQUEST_METHOD"] == "POST") {
        $num1 = $_POST["num1"];
        $num2 = $_POST["num2"];

        // Verificação se os campos não estão vazios
        if ($num1 !== "" && $num2 !== "") {
            $soma = $num1 + $num2;
            $sub = $num1 - $num2;
            $mult = $num1 * $num2;
            $div = ($num2 != 0) ? $num1 / $num2 : "Erro: divisão por zero";
            $resto = ($num2 != 0) ? $num1 % $num2 : "Erro: divisão por zero";

            echo "<table>
                    <tr>
                        <th>Operação</th>
                        <th>Resultado</th>
                    </tr>
                    <tr><td>$num1 + $num2</td><td>$soma</td></tr>
                    <tr><td>$num1 - $num2</td><td>$sub</td></tr>
                    <tr><td>$num1 × $num2</td><td>$mult</td></tr>
                    <tr><td>$num1 ÷ $num2</td><td>$div</td></tr>
                    <tr><td>$num1 % $num2</td><td>$resto</td></tr>
                  </table>";
        } else {
            echo "<p style='color:red;'>Por favor, preencha todos os campos.</p>";
        }
    }
    ?>
</body>
</html>
