<body>
    <h2>Gerador de Números Pares</h2>

    <form method="POST">
        <input type="number" name="maximo" placeholder="Digite um número" min="2" required>
        <br><br>
        <input type="submit" value="Gerar">
    </form>

    <?php
    if ($_SERVER["REQUEST_METHOD"] == "POST") {
        $max = $_POST["maximo"];

        if ($max > 1) {
            echo "<h3>Números pares até $max:</h3>";
            echo "<ul>";

            // usando FOR
            for ($i = 2; $i <= $max; $i += 2) {
                echo "<li>$i</li>";
            }

            echo "</ul>";
        } else {
            echo "<p style='color:red; font-weight:bold;'>Digite um número maior que 1!</p>";
        }
    }
    ?>
</body>
</html>
